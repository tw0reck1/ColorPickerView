<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tw0reck1.colorpickerapp.MainActivity">

    <tw0reck1.colorpicker.ColorPickerView
        android:id="@+id/colorview1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="12dp"
        app:cpv_radius="4"
        app:cpv_stroke_width="3dp"
        app:cpv_stroke_color="@android:color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp"
        android:orientation="horizontal">

        <tw0reck1.colorpicker.ColorPickerView
            android:id="@+id/colorview2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cpv_radius="2"
            app:cpv_stroke_width="2dp"
            app:cpv_stroke_color="@android:color/black"/>

        <tw0reck1.colorpicker.ColorPickerView
            android:id="@+id/colorview3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cpv_radius="12"
            app:cpv_stroke_color="@android:color/white"/>

    </LinearLayout>

    <tw0reck1.colorpicker.ColorPickerView
        android:id="@+id/colorview4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp"
        app:cpv_radius="4"
        app:cpv_stroke_width="3dp"
        app:cpv_stroke_color="@android:color/white"/>

</LinearLayout>